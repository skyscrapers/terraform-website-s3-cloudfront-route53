{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "PublicReadAccess",
      "Principal": {
        "AWS": "*"
      },
      "Effect": "Allow",
      "Action": [
        "s3:GetObject"
      ],
      "Resource": "arn:aws:s3:::${bucket}/*",
      "Condition": {
        "StringEquals": {
          "aws:UserAgent": "${secret}"
        }
      }
    },
	{
      "Effect": "Allow",
      "Principal": {
        "AWS": "${ci_role_arn}"
      },
      "Action": "s3:PutObject",
      "Resource": "arn:aws:s3:::${bucket}/*"
    }
  ]
}
